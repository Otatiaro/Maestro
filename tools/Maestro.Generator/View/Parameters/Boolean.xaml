<UserControl x:Class="Maestro.Generator.View.Parameters.Boolean"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:model="clr-namespace:Maestro.Generator.Model.Parameters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <model:Boolean/>
    </UserControl.DataContext>
    <GroupBox Header="Boolean">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <CheckBox IsChecked="{Binding DefaultValue}" Content="True by default" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <CheckBox IsChecked="{Binding IsPersistant}" Content="Persistant" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <CheckBox IsChecked="{Binding IsReadOnly}" Content="Read only" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
    </GroupBox>
</UserControl>
